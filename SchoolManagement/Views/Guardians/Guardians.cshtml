@model List<SchoolManagement.Models.Guardians>

@{
    ViewBag.Title = "Guardians";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<br />
<br />
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="active-member">
                    <div class="table-responsive">
                        <table class="table table-xs mb-0">
                            <thead>
                                <tr>
                                    <th>Ref No</th>
                                    <th>Guardian Name</th>
                                    <th>Guardian Mobile Number</th>
                                    <th>Guardian Email</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var guardian in Model)
                                {
                                    <tr>
                                        <td>@guardian.GuardianId</td>
                                        <td>@guardian.GuardianName</td>
                                        <td>@guardian.GuardianMobNo</td>
                                        <td>@guardian.GuardianEmail</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
